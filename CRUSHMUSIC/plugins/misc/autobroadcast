import asyncio
import datetime
from  CRUSHMUSIC import app
from pyrogram import Client
from config import START_IMG_URL
from  CRUSHMUSIC.utils.database import get_served_chats
from pyrogram.types import InlineKeyboardMarkup, InlineKeyboardButton


MESSAGE = f"""**à¹ á´›ÊœÉªs Éªs á´›Êœá´‡ á´€á´…á´ á´€É´á´„á´‡ á´á´œsÉªá´„ á´˜ÊŸá´€Êá´‡Ê€ + á´á´€É´á´€É¢á´‡á´É´á´‡á´› Ê€á´Ê™á´á´› ğŸ’—. ğŸ’Œ

ğŸ§ á´˜ÊŸá´€Ê + á´ á´˜ÊŸá´€Ê + á´„á´˜ÊŸá´€Ê ğŸ§

â¥ sá´œá´˜á´˜á´Ê€á´›á´‡á´… á´¡á´‡ÊŸá´„á´á´á´‡ - ÊŸá´‡Ò“á´› É´á´á´›Éªá´„á´‡, á´›á´€É¢á´€ÊŸÊŸ, á´ á´„á´›á´€É¢, Ê™á´€É´ - á´á´œá´›á´‡, sÊœá´€ÊÊ€Éª, ÊŸÊÊ€Éªá´„s, sá´É´É¢ - á´ Éªá´…á´‡á´ á´…á´á´¡É´ÊŸá´á´€á´…, á´‡á´›á´„... ğŸ’•

ğŸ”á´œêœ±á´‡ Â» [/start](https://t.me/{app.username}?start=true) á´›á´ á´„Êœá´‡á´„á´‹ Ê™á´á´›

â² Ê™á´á´› :** @{app.username}"""

BUTTON = InlineKeyboardMarkup(
    [
        [
            InlineKeyboardButton("à¹ á´‹Éªá´…É´á´€á´˜ á´á´‡ à¹", url=f"https://t.me/{app.username}?startgroup=s&admin=delete_messages+manage_video_chats+pin_messages+invite_users")
        ]
    ]
)

CELEBRATION_VID_URL = "https://github.com/MrDevloaper/CRUSHMUSIC/assets/155803358/dcbec346-bb98-4818-9a1c-683e9c3107b0"

BD_VID = "https://envs.sh/EIH.mp4"

async def send_message_to_chats():
    try:
        chats = await get_served_chats()

        for chat_info in chats:
            chat_id = chat_info.get('chat_id')
            if isinstance(chat_id, int):
                try:
                    await app.send_video(chat_id, video=BD_VID, caption=MESSAGE, reply_markup=BUTTON)
                    await asyncio.sleep(3)
                except Exception as e:
                    pass
    except Exception as e:
        pass
async def continuous_broadcast():
    while True:
        await send_message_to_chats()
        await asyncio.sleep(180000)

asyncio.create_task(continuous_broadcast())
